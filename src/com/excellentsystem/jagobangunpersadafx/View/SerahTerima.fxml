<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane id="AnchorPane" prefHeight="700.0" prefWidth="1024.0" styleClass="stage" stylesheets="@../Resource/MyTheme.css" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.excellentsystem.jagobangunpersadafx.View.SerahTerimaController">
    <children>
      <GridPane hgap="5.0" layoutX="10.0" layoutY="10.0" vgap="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <TableView fx:id="SerahTerimaTable" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
               <columns>
                  <TableColumn fx:id="noSerahTerimaColumn" prefWidth="75.0" text="No Serah Terima" />
                  <TableColumn fx:id="tglSerahTerimaColumn" prefWidth="75.0" text="Tgl Serah Terima" />
                  <TableColumn fx:id="kodeKategoriColumn" prefWidth="75.0" text="Kategori Property" />
                  <TableColumn fx:id="namaPropertyColumn" prefWidth="75.0" text="Nama Property" />
                  <TableColumn fx:id="namaCustomerColumn" prefWidth="75.0" text="Nama Customer" />
                  <TableColumn fx:id="hargaJualColumn" prefWidth="75.0" text="Harga Property" />
                  <TableColumn fx:id="diskonColumn" prefWidth="75.0" text="Diskon" />
                  <TableColumn fx:id="addendumColumn" prefWidth="75.0" text="Addendum" />
                  <TableColumn fx:id="totalDPColumn" prefWidth="75.0" text="Total DP" />
                  <TableColumn fx:id="totalKPRColumn" prefWidth="75.0" text="Total KPR" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Tanggal" />
                  <DatePicker fx:id="tglAwalPicker" onAction="#getSerahTerima" prefHeight="30.0" prefWidth="120.0" />
                  <Label alignment="CENTER" prefHeight="30.0" text="-" />
                  <DatePicker fx:id="tglAkhirPicker" onAction="#getSerahTerima" prefHeight="30.0" prefWidth="120.0" />
                  <HBox alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                     <children>
                        <TextField fx:id="searchField" prefHeight="30.0" prefWidth="300.0" promptText="Search..." styleClass="search-field" />
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
      </GridPane>
   </children>
</AnchorPane>
